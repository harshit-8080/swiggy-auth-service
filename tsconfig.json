{
  "compilerOptions": {
    "baseUrl": "./src",

    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false
  }
}
